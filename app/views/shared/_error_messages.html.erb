<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      表單中有 <%= @user.errors.full_messages.uniq.count %> 項錯誤！
    </div>
    <ul>
    <% @user.errors.full_messages.uniq.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>