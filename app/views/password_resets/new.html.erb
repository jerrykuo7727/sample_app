<% provide(:title, "忘記密碼") %>
<h1>忘記密碼</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email, "電子信箱" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "送出", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>